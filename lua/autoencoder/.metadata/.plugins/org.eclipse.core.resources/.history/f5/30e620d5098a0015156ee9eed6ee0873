require 'unsup';
require 'nn';
require 'gnuplot';
require 'Encoder';
require 'Decoder';
require 'image';
require 'optim';
require 'functions'
require 'randomkit'

--load Data
traindata, testdata = loadData{normalizeMean = false} 

n_hidden = arg[1] or 50
kernelsize = arg[2] or 7
n_input = 32*32
batchsize = arg[3] or 64
config = {learningRate = arg[4] or 0.1,
         weightDecay = arg[5] or 5e-5,
         momentum = 0,
         learningRateDecay = arg[6] or 5e-7}
         
--initialize Encode
enc = nn.Encoder(1,n_hidden,kernelsize)
dec = nn.Decoder(50,n_hidden,kernelsize)


autoencoder = nn.Sequential()
autoencoder:add(enc)
autoencoder:add(dec)

--set Criterion 
criterion = nn.ParallelCriterion()

xcrit = nn.MSECriterion() --compare x_in and x_out
ycrit = nn.MSECriterion() --compare y_in and y_out

criterion:add(xcrit,0.5)
criterion:add(ycrit,0.5)

parameters, gradParameters = autoencoder:getParameters()

timer = torch.Timer()
trainModel(5000, batchsize, traindata, autoencoder, criterion, parameters, gradParameters, config, false, 0.2)
print('finished training after ' .. timer:time().real .. ' - save model')
torch.save('model.net',autoencoder)




